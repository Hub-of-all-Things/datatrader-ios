    pod 'Mockingjay'
    pod 'MarkdownView'
    pod 'Kingfisher'
    pod 'JTAppleCalendar'
    pod "Cluster"
    pod 'PasswordExtension'
  end

  target 'HATAppUITests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Alamofire'
    pod 'Cache'
    pod 'RealmSwift'
    pod 'SwiftyJSON'
    pod 'JWTDecode'
    pod 'SwiftyRSA'
    pod 'KeychainSwift'
    pod 'Firebase/Core'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'BEMCheckBox'
    pod 'zxcvbn-ios'
    pod 'HatForIOS', :git => 'https://github.com/whiteshadow-gr/HatForIOS.git'
    pod 'Mockingjay'
    pod 'MarkdownView'
    pod 'Kingfisher'
    pod 'JTAppleCalendar'
    pod "Cluster"
    pod 'PasswordExtension'
